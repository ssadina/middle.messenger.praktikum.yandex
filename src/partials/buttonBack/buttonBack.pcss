.button-back {
    width: 64px;
    height: 100%;
    border: none;
    border-right: 1px solid $smoky-gray;
    background-color: $light-gray;
    color: $white;

    &__icon{
        width: 28px;
        height: 28px;
        margin: auto;
        background: $blue-base;
        border-radius: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    img{
        transform: rotate(180deg); 
    }
}
